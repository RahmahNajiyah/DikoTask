<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Konversi Panjang"
           android:layout_centerHorizontal="true"
           android:textSize="30sp"
           android:id="@+id/txtJdl"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/satuan3"
            android:layout_below="@id/txtJdl"
            android:id="@+id/imgPnjg"/>

        <EditText
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_below="@id/imgPnjg"
            android:background="@color/colorAccent"
            android:inputType="number"
            android:text=""
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/edtInput"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/edtInput"
            android:layout_below="@id/imgPnjg"
            android:layout_marginTop="15dp"
            android:id="@+id/spinnerPnjg"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtInput"
            android:layout_marginTop="20dp"
            android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="0.0"
            android:id="@+id/angkaKm"
            android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Km"
                android:id="@+id/Km"
                android:layout_alignParentRight="true"
                android:textSize="20dp"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="0.0"
            android:id="@+id/angkaHm"
            android:textSize="20dp"
                android:layout_below="@id/angkaKm"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hm"
                android:id="@+id/Hm"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:layout_below="@id/Km"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="0.0"
            android:id="@+id/angkaDam"
            android:textSize="20dp"
                android:layout_below="@id/angkaHm"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dam"
                android:id="@+id/Dam"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:layout_below="@id/Hm"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="0.0"
            android:id="@+id/angkaM"
            android:textSize="20dp"
                android:layout_below="@id/angkaDam"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m"
                android:id="@+id/M"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:layout_below="@id/Dam"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="0.0"
            android:id="@+id/angkaDm"
            android:textSize="20dp"
                android:layout_below="@id/angkaM"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dm"
                android:id="@+id/dm"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:layout_below="@id/M"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="0.0"
            android:id="@+id/angkaCm"
            android:textSize="20dp"
                android:layout_below="@id/angkaDm"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cm"
                android:id="@+id/cm"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:layout_below="@id/dm"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="0.0"
            android:id="@+id/angkaMm"
            android:textSize="20dp"
                android:layout_below="@id/angkaCm"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mm"
                android:id="@+id/mm"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:layout_below="@id/cm"/>

        </RelativeLayout>




    </RelativeLayout>
</ScrollView>